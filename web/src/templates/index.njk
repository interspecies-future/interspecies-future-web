<div class="hide-svg">
<svg class="lenticular-mask" width="0" height="0">
  <defs>
    <clipPath id="myClip" clipPathUnits="objectBoundingBox">
      {% for i in range(0, 125) %}
        <!-- 1/250 = 0.004 -->
        <!-- 0.004 /2 = 0.001 -->
        <rect class="bar" width="1" height="0.007" y="{{ i * 0.008}}" />
      {% endfor %}
    </clipPath>
  </defs>
</svg>
